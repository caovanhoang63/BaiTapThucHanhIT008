<Window x:Class="InstagramAutoTool.View.CommentInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:InstagramAutoTool.View"
        mc:Ignorable="d"
        Title="Add comment"
        Closing="CommentInputDialog_OnClosing"
        Icon="../Assets/Images/SeleniumAutoToolLogo.png"
        Height="240"
        Width="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" >
    <StackPanel Margin="10">


        <Label >Comment: </Label>
        <TextBox Name="CommentTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>

        <StackPanel Margin="0 10"  Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Click="okButton_Click" IsDefault="True" Width="50" Margin="0 0 10 0 ">OK</Button>
            <Button Name="CancelButton" IsCancel="True" Width="50">Cancel</Button>
        </StackPanel>
    </StackPanel >
</Window>
